#!/bin/sh
# Maven Wrapper script
# Automatically downloads and uses Maven

set -e

# Configuration
MAVEN_VERSION="3.9.6"
MAVEN_HOME="$HOME/.m2/wrapper/dists/apache-maven-$MAVEN_VERSION"
MAVEN_URL="https://repo.maven.apache.org/maven2/org/apache/maven/apache-maven/$MAVEN_VERSION/apache-maven-$MAVEN_VERSION-bin.tar.gz"

# Detect OS
case "$(uname -s)" in
    Darwin*) OS="mac";;
    Linux*)  OS="linux";;
    *)       OS="unknown";;
esac

# Check for Java
if ! command -v java >/dev/null 2>&1; then
    echo "Error: Java is not installed or not in PATH"
    echo "Please install Java 17 or later"
    echo "  macOS: brew install openjdk@17"
    echo "  Ubuntu: sudo apt install openjdk-17-jdk"
    exit 1
fi

# Download Maven if not present
if [ ! -d "$MAVEN_HOME" ]; then
    echo "Downloading Maven $MAVEN_VERSION..."
    mkdir -p "$MAVEN_HOME"

    if command -v curl >/dev/null 2>&1; then
        curl -fsSL "$MAVEN_URL" | tar -xz -C "$MAVEN_HOME" --strip-components=1
    elif command -v wget >/dev/null 2>&1; then
        wget -qO- "$MAVEN_URL" | tar -xz -C "$MAVEN_HOME" --strip-components=1
    else
        echo "Error: curl or wget is required to download Maven"
        exit 1
    fi

    echo "Maven $MAVEN_VERSION installed to $MAVEN_HOME"
fi

# Run Maven
exec "$MAVEN_HOME/bin/mvn" "$@"
